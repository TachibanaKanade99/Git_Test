<!--Photo Modal-->
<div class="modal fade" id="photo-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title font-weight-bold" id="photo-modal">Hmm</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<%= image_tag("desktop.jpg", class: "img-fluid", alt: "Card image cap") %>
				<hr>
				<p>Hmm</p>
			</div>
			<div class="modal-footer text-left">
				<p>Hmm</p>
			</div>
		</div>
	</div>
</div>

<div class="row">
	<% if @user.followings.length != 0 %>
		<% @following_photos.each do |photo| %>
			<div class="col-12 col-md-6 p-3">
				<div class="card border-light bg-light">
					<div class="row py-0 card-body">
						<%= image_tag("desktop.jpg", class: "col-12 col-md-6 p-0 img-fluid img-thumbnail card-img", alt: "Card image cap") %>
						<div class="col-12 col-md-6">
							<div class="card-title">
								<%= image_tag("tuanminh.png", class: "img-fluid rounded-circle ft-avatar", alt: "user-avatar") %>
								<span class="font-weight-bold ft-login" href="#"> <%= photo.user.first_name %> <%= photo.user.last_name %> </span>
								<p><strong> <%= photo.title %> </strong></p>
							</div>

							<div class="card-body px-0">
								<p class="card-text"> <%= photo.description %> </p>
							</div>
							<span><button class="heart-btn px-0" ><i class="fas fa-heart"></i></button></span>
							<span class="like-numbers">112</span>
							<span class="offset-md-2 font-italic ft-date"> <%= photo.created_at.localtime%> </span>
						</div>
					</div>
				</div>
			</div>
		<% end %>
	<% else %>
		<div class="col-12 col-md-12">
			<p class="text-center">You have not followed anyone yet!</p>
		</div>
	<% end %>

</div>