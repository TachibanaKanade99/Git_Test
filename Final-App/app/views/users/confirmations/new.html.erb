<!doctype html>
<html lang="en">
<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- Google Roboto Font -->
	<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet" type="text/css">
	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
	<%= stylesheet_link_tag 'style' %>

	<title>Fotobook - Login</title>
</head>
<body>

<nav class="navbar navbar-expand-lg fixed-top navbar-dark ft-navbar">
	<div class="col-xs-1 col-md-2 p-0 text-center">
		<a class="navbar-brand ft-name font-weight-bold" href="#">Fotobook</a>
	</div>

	<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
	</button>

	<div class="collapse navbar-collapse" id="navbarSupportedContent">
		<div class="col-md-5 mr-auto px-0">
			<div class="input-group input-group-sm py-1">
				<input class="form-control" type="search" role="search" placeholder="Search Photo / Album" aria-label="Search">
			</div>
		</div>

<!--		<div class="col-xs-6 col-md-2 text-center">-->
<!--			<a class="navbar-brand font-weight-bold ft-login" href="#">Login</a>-->
<!--		</div>-->
	</div>
</nav>

<div class="container-fluid text-center font-weight-bolder pt-5 mt-5 ft-center-text">
	Resend confirmation instructions
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-6 col-md-4 col-md-offset-4 m-auto ">
			<div class="account-wall">
				<img class="profile-img mt-4" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120" alt="">

				<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, :class => "form-signin" }) do |u| %>
					<%= render "users/shared/error_messages", resource: resource %>

					<%= u.label :email, " Enter Email:", :class => "font-weight-bold" %>
					<%= u.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), placeholder: "Email", class: "form-control"%>

					<div class="text-center">
						<%= u.submit "Resend confirmation instructions", class: "my-3 btn text-light login-btn" %>
					</div>
				<% end %>

			</div>
			<%= link_to "Log in", new_session_path(resource_name), class: "text-center new-account my-2"%>
			<%= link_to "Sign up", new_registration_path(resource_name), class: "text-center new-account my-2"%>
			<%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-center new-account my-2"%>
		</div>
	</div>
</div>


<!-- Font Awesome -->
<script src="https://kit.fontawesome.com/1fb1fb2be8.js" crossorigin="anonymous"></script>
<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
