<!doctype html>
<html lang="en">
<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- Google Roboto Font -->
	<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet" type="text/css">
	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
	<%= stylesheet_link_tag 'style' %>

	<title></title>
</head>
<body>

<nav class="navbar navbar-expand-lg fixed-top navbar-dark ft-navbar">
	<div class="col-xs-1 col-md-2 p-0 text-center">
		<a class="navbar-brand ft-name font-weight-bold" href="#">Fotobook</a>
	</div>

	<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
	</button>

	<div class="collapse navbar-collapse" id="navbarSupportedContent">
		<div class="col-md-5 mr-auto px-0">
			<div class="input-group input-group-sm py-1">
				<input class="form-control" type="search" role="search" placeholder="Search Photo / Album" aria-label="Search">
			</div>
		</div>

<!--		<div class="col-xs-6 col-md-2 text-center">-->
<!--			<a class="navbar-brand font-weight-bold ft-login" href="#">Login</a>-->
<!--		</div>-->

		<div class="col-xs-6 col-md-2 text-center">
			<%= link_to("Signup", new_registration_path(resource_name), class: "navbar-brand font-weight-bold ft-login") %>
		</div>

	</div>
</nav>

<div class="container-fluid text-center font-weight-bolder pt-5 mt-5 ft-center-text">
	Fotobook Login
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-6 col-md-4 col-md-offset-4 m-auto ">
			<div class="fa-border mt-3 text-center">
				<a href="https:www.google.com" target="_blank">
					<img class="mr-3" src="https://img.icons8.com/color/62/000000/google-logo.png"/>
				</a>

				<a href="#">
					<img class="mr-3" src="https://img.icons8.com/fluent/70/000000/facebook-new.png"/>
				</a>

				<a href="#">
					<img class="" src="https://img.icons8.com/color/70/000000/twitter-circled.png"/>
				</a>

			</div>
			<div class="account-wall">
				<img class="profile-img mt-4" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120" alt="">

				<%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true, :html => {:class => "form-signin"}) do |u| %>
					<%= u.email_field :email, autofocus: true, autocomplete: "email", value: "", placeholder: "Email", class: "form-control"%>

					<br>
					<%= u.password_field :password, autocomplete: "current-password", value: "", placeholder: "Password", class: "form-control"%>

					<br>
					<% if devise_mapping.rememberable? %>
						<%= u.check_box :remember_me, class: "form-check-input ml-2", type: "checkbox"%>
						<%= u.label :remember_me, class: "form-check-label ml-4"%>
					<% end %>

					<div class="text-center">
						<%= u.submit "Login", class: "mt-2 btn text-light login-btn" %>
					</div>
				<% end %>

				<%#= render "users/shared/links" %>
				<%= link_to("Forgot password?", new_password_path(resource_name), class: "text-center new-account mb-1")%>
			</div>
			<%= link_to("Create an account", new_registration_path(resource_name), class: "text-center new-account")%>
		</div>
	</div>
</div>


<!-- Font Awesome -->
<script src="https://kit.fontawesome.com/1fb1fb2be8.js" crossorigin="anonymous"></script>
<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<!-- JQuery Validate -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/additional-methods.js"></script>

<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
<%=javascript_include_tag 'src' %>

</body>
</html>
