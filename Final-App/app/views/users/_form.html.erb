<%= form_for(resource, as: resource_name, url: registration_path(resource_name), local: true, :html => {:class => "form-signin"}) do |u| %>
	<%= render "users/shared/error_messages", resource: resource %>

	<%= u.label :first_name, "First Name:", :class => "font-weight-bold" %>
	<%= u.text_field :first_name, :value => "", :placeholder => "Enter First Name", :class => "form-control", required: 'true'%>

	<%= u.label :last_name, "Last Name:", :class => "font-weight-bold" %>
	<%= u.text_field :last_name, :value => "", :placeholder => "Enter Last Name", :class => "form-control", required: 'true'%>

	<%= u.label :email, "Email:", :class => "font-weight-bold" %>
	<%= u.email_field :email, autofocus: true, autocomplete: "email", :value => "", :placeholder => "Enter Email", :class => "form-control", required: 'true'%>

	<%= u.label :password, "Password:", :class => "font-weight-bold" %>
	<% if @minimum_password_length %>
		<em>(<%= @minimum_password_length %> characters minimum)</em>
	<% end %><br />
	<%= u.password_field :password, autocomplete: "new-password", :value => "", :placeholder => "Enter Password", :class => "form-control", required: 'true'%>

	<%= u.label :password_confirmation, "Password:", :class => "font-weight-bold" %>
	<%= u.password_field :password_confirmation, autocomplete: "new-password", :value => "", :placeholder => "Enter Password", :class => "form-control", required: 'true'%>

	<div class="text-center">
		<%= u.submit "Signup", :class => "mt-2 mb-2 btn text-light login-btn" %>
	</div>
<% end %>

