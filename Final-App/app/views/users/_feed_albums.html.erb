<!-- Album Modal -->
<div class="modal fade" id="photo-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="photo-modal">hmm</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
					<div class="carousel-inner">
						<div class="carousel-item active">
							<%= image_tag("desktop.jpg", class: "img-fluid", alt: "Card image cap") %>
						</div>
						<div class="carousel-item">
							<%= image_tag("desktop.jpg", class: "img-fluid", alt: "Card image cap") %>
						</div>
						<div class="carousel-item">
							<%= image_tag("desktop.jpg", class: "img-fluid", alt: "Card image cap") %>
						</div>
					</div>
					<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="sr-only">Previous</span>
					</a>
					<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="sr-only">Next</span>
					</a>
				</div>
				<hr>
				<p>hmm</p>
			</div>

			<div class="modal-footer">
				<p>hmm</p>
			</div>
		</div>
	</div>
</div>

<div class="row">
	<% if @user.followings.length != 0 %>
		<% @following_albums.each do |album| %>
			<div class="col-xs-12 col-md-6 p-3">
				<div class="card bg-light border-light ml-2">
					<div class="row py-0 px-2">
						<div class="col-xs-12 col-md-6 p-0">
							<%= image_tag("desktop.jpg", class: "position-absolute img-fluid img-thumbnail album-imgs", data: {toggle: "modal", target: "#photo-modal"}, alt: "Card image cap") %>
							<%= image_tag("desktop.jpg", class: "position-absolute rotate6 img-fluid img-thumbnail album-imgs", data: {toggle: "modal", target: "#photo-modal"}, alt: "Card image cap") %>
							<%= image_tag("desktop.jpg", class: "rotate11 img-fluid img-thumbnail album-imgs", alt: "Card image cap") %>
						</div>

						<div class="col-xs-12 col-md-6 pl-4">
							<div class="card-title">
								<%image_tag("tuanminh.png", class: "img-fluid rounded-circle ft-avatar", alt: "user-avatar") %>
								<span class="font-weight-bold ft-login" href="#"> <%=album.user.first_name %> <%= album.user.last_name%> </span>
								<p><strong> <%= album.title %> </strong></p>
							</div>

							<div class="card-body px-0">
								<p class="card-text"> <%= album.description %> </p>
							</div>

							<span><button class="heart-btn px-0" ><i class="fas fa-heart"></i></button></span>
							<span class="like-numbers">112</span>
							<span class="offset-md-2 font-italic ft-date"> <%= album.created_at.localtime %> </span>
						</div>
					</div>
				</div>
			</div>
		<% end %>
	<% else %>
		<div class="col-12 col-md-12">
			<p class="text-center">You have not followed anyone yet!</p>
		</div>
	<% end %>
</div>